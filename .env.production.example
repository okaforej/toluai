# Production Environment Variables
# Copy this file to .env.production and fill in the values

# Application
ENVIRONMENT=production
FLASK_ENV=production
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Database (Cloud SQL)
DATABASE_URL=postgresql://toluai_prod:password@/toluai_prod?host=/cloudsql/PROJECT_ID:REGION:INSTANCE_NAME
CLOUD_SQL_CONNECTION_NAME=PROJECT_ID:REGION:INSTANCE_NAME

# Redis (Memorystore)
REDIS_URL=redis://REDIS_IP:6379/0

# Security
CORS_ORIGINS=https://your-domain.com
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Monitoring
SENTRY_DSN=your-sentry-dsn-here

# Email (SendGrid/Mailgun)
MAIL_SERVER=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=apikey
MAIL_PASSWORD=your-api-key-here
MAIL_DEFAULT_SENDER=noreply@your-domain.com

# Google Cloud
GCP_PROJECT_ID=toluai-prod-1755383107
GCP_REGION=us-central1