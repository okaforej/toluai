# PostgreSQL Configuration for Development/Testing
# Copy this to .env and adjust as needed

# Flask Environment
FLASK_ENV=development
FLASK_DEBUG=true

# PostgreSQL Database Configuration
DATABASE_URI=postgresql://toluai_dev:toluai_dev_pass123@localhost:5432/toluai_dev
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=toluai_dev
POSTGRES_USER=toluai_dev
POSTGRES_PASSWORD=toluai_dev_pass123

# PostgreSQL Production Settings (update for production)
# DATABASE_URI=postgresql://username:password@host:port/database_name
# Example: DATABASE_URI=postgresql://toluai:secure_password@db.example.com:5432/toluai_production

# Database Pool Settings
DB_POOL_SIZE=20
DB_POOL_RECYCLE=3600
DB_MAX_OVERFLOW=30
DB_ECHO=false

# Redis Configuration
REDIS_URL=redis://:redis_dev_pass123@localhost:6379/0
REDIS_PASSWORD=redis_dev_pass123
REDIS_PORT=6379

# Security Keys (generate new ones for production!)
SECRET_KEY=dev-secret-key-change-in-production-$(openssl rand -hex 32)
JWT_SECRET_KEY=dev-jwt-secret-change-in-production-$(openssl rand -hex 32)
SECURITY_PASSWORD_SALT=dev-salt-change-in-production-$(openssl rand -hex 16)

# JWT Token Expiration
JWT_ACCESS_TOKEN_EXPIRES_HOURS=1
JWT_REFRESH_TOKEN_EXPIRES_DAYS=30

# pgAdmin Configuration (for development)
PGADMIN_EMAIL=admin@toluai.local
PGADMIN_PASSWORD=admin123
PGADMIN_PORT=5050

# Email Configuration (optional)
MAIL_SERVER=localhost
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=noreply@toluai.com

# Monitoring (optional)
SENTRY_DSN=
LOG_LEVEL=INFO
LOG_FORMAT=json

# File Upload Settings
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads

# Celery Configuration (uses Redis)
CELERY_BROKER_URL=redis://:redis_dev_pass123@localhost:6379/1
CELERY_RESULT_BACKEND=redis://:redis_dev_pass123@localhost:6379/2

# Rate Limiting
RATELIMIT_DEFAULT=100 per minute
RATELIMIT_STORAGE_URL=redis://:redis_dev_pass123@localhost:6379/3