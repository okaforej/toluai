[flake8]
max-line-length = 100
exclude = 
    .git,
    __pycache__,
    venv,
    .venv,
    .eggs,
    *.egg,
    build,
    dist,
    migrations,
    .pytest_cache,
    node_modules
ignore = 
    E203,  # whitespace before ':'
    E266,  # too many leading '#' for block comment
    W503,  # line break before binary operator
    F401,  # module imported but unused
    F841,  # local variable assigned but never used
per-file-ignores = 
    __init__.py:F401
max-complexity = 10