# Backend Environment Variables
# Copy this file to .env and update with your values

# Flask Configuration
FLASK_APP=wsgi.py
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=True

# Database
DATABASE_URI=postgresql://username:password@localhost/toluai
# For SQLite (development): sqlite:///instance/toluai.db

# Security
SECURITY_PASSWORD_SALT=your-security-password-salt

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=1
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Admin User
ADMIN_EMAIL=admin@toluai.com
ADMIN_PASSWORD=admin123

# Redis (for rate limiting and caching)
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET_KEY=jwt-secret-key-change-this

# Sentry (Error Monitoring)
SENTRY_DSN=https://your-sentry-dsn

# API Rate Limits
API_RATE_LIMIT=100 per minute

# File Upload Settings
MAX_CONTENT_LENGTH=16777216  # 16MB

# Pagination
ITEMS_PER_PAGE=20